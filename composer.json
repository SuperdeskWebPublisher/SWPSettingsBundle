{
  "name": "swp/settings-bundle",
  "type": "symfony-bundle",
  "description": "Scope and owner aware settings system. Define settings in configuration, keep customized values in storage.",
  "keywords": ["settings bundle", "settings", "bundle", "publisher", "superdesk"],
  "license":"AGPL-3.0",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Paweł Mikołajczuk",
      "email": "pawel.mikolajczuk@sourcefabric.org"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "../../*/*"
    }
  ],
  "require": {
    "php": "^7.1",
    "swp/storage-bundle": "^1.4|^2.0",
    "swp/common": "^1.4|^2.0",
    "symfony/twig-bundle": "^3.4|^4.2",
    "symfony/form": "^3.4|^4.2",
    "symfony/validator": "^3.4|^4.2",
    "symfony/security": "^3.4|^4.2",
    "symfony/translation": "^3.4|^4.2",
    "nelmio/api-doc-bundle": "2.13.*",
    "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
    "doctrine/orm": "^2.6",
    "doctrine/doctrine-bundle": "^1.10"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "phpdocumentor/reflection-docblock": "^4.0",
    "symfony/framework-bundle": "^3.4|^4.2",
    "symfony/http-foundation": "^3.4|^4.2",
    "symfony/security-bundle": "^3.4|^4.2",
    "symfony/property-access": "^3.4|^4.2",
    "symfony/monolog-bundle": "^2.0",
    "symfony/monolog-bridge": "^3.4|^4.2",
    "symfony/serializer": "^3.4|^4.2",
    "symfony/asset": "^3.4|^4.2",
    "symfony/templating": "^3.4|^4.2",
    "liip/functional-test-bundle": "1.6.*",
    "doctrine/doctrine-cache-bundle": "1.3.*"
  },
  "autoload": {
    "psr-4": { "SWP\\Bundle\\SettingsBundle\\": "" }
  },
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  }
}
